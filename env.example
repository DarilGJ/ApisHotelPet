PORT=3000

# Frontend / CORS
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173,https://hotelpet-2.onrender.com

# Database connection
DB_HOST=your-db-host.render.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_DIALECT=postgres
# SSL Configuration
# Para servidores remotos (Neon.tech, Render, etc.) SSL es requerido
# Si DB_HOST no es localhost, SSL se activará automáticamente
DB_SSL=true
DB_SSL_MODE=require
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Authentication
JWT_SECRET=una_clave_secreta_segura_y_larga_para_jwt

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLIC_KEY=pk_test_...

